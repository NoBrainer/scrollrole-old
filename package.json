{
  "name": "scroll-role",
  "version": "0.0.0",
  "private": true,
  "//": [
    "parallelshell needs to stay at 3.0.1, because 3.0.2 is bugged",
    "use git bash for npm scripts: npm config set script-shell \"C:\\Program Files\\Git\\bin\\bash.exe\"",
    "unset git bash for npm scripts: npm config delete script-shell",
    "TODO: modify kill:server to use port from config"
  ],
  "devDependencies": {
    "browserify": "16.2.3",
    "browserify-compile-templates": "0.3.0",
    "copyfiles": "2.1.0",
    "cpr": "3.0.1",
    "fkill-cli": "5.2.0",
    "forever": "0.15.3",
    "less": "3.8.1",
    "mkdirp": "0.5.1",
    "nodemon": "1.18.6",
    "parallelshell": "3.0.1",
    "rimraf": "2.6.2",
    "svgstore-cli": "1.3.1",
    "uglifycss": "0.0.29",
    "uglify-js": "3.4.9",
    "watch": "1.0.2"
  },
  "scripts": {
    "start": "npm run kill:server && nodemon ./bin/www",
    "watch": "npm run build && npm run watch:all",
    "build": "npm run setup && npm run build:all",
    "startForever": "forever start bin/www",
    "stopForever": "forever stopall",
    "----------------------------------------------------------": "",
    "prebuild": "npm install -s",
    "build:all": "npm run build:css && npm run build:js",
    "build:css": "lessc public/css/main.less > build/public/css/style.css",
    "build:js": "browserify -t browserify-compile-templates --extension=.html public/js/main.js > build/public/js/bundle.js",
    "clean": "rimraf build",
    "install:config": "cpr \"config.js\" \"../scrollRoleConfig.js\"",
    "postbuild:css": "uglifycss build/public/css/style.css > build/public/css/style.min.css",
    "postbuild:js": "uglifyjs build/public/js/bundle.js -o build/public/js/bundle.min.js",
    "setup": "npm run clean -s && npm run setup:folders && npm run setup:fonts && npm run setup:html && npm run setup:resources",
    "setup:folders": "mkdirp build/public/js && mkdirp build/public/css",
    "setup:fonts": "cpr \"node_modules/font-awesome/fonts\" \"build/public/fonts\"",
    "setup:html": "copyfiles -f \"./public/*.html\" \"./build/public/\"",
    "setup:resources": "cpr \"public/resources\" \"build/public/resources\"",
    "postsetup:resources": "svgstore -o build/public/resources/icons/icons.svg public/resources/icons/**/*.svg",
    "kill:server": "fkill -s :3000",
    "watch:all": "parallelshell \"npm run watch:css -s\" \"npm run watch:js -s\" \"npm run watch:server -s\"",
    "watch:css": "watch \"npm run build:css\" public/css",
    "watch:js": "watch \"npm run build:js\" public/js",
    "watch:server": "npm run kill:server && nodemon --watch api --watch app.js ./bin/www"
  },
  "dependencies": {
    "backbone": "1.3.3",
    "body-parser": "1.18.3",
    "cookie-parser": "1.4.3",
    "debug": "4.1.0",
    "express": "4.16.4",
    "font-awesome": "4.7.0",
    "jade": "1.11.0",
    "jquery": "3.3.1",
    "js-yaml": "3.12.0",
    "morgan": "1.9.1",
    "serve-favicon": "2.5.0",
    "underscore": "1.9.1"
  }
}
